<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context=".ResultActivity" >

    <LinearLayout
        android:id="@+id/left_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ResultActivity"
        android:background="@drawable/green_border">

        <TextView
            android:id="@+id/kenteken_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
           	android:layout_marginBottom="50dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/verzekerd_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/apk_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/center_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ResultActivity" 
        android:background="@drawable/red_border">

        <!-- Center piece -->

        <TextView
            android:id="@+id/kenteken_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
           	android:layout_marginBottom="50dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/verzekerd_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/apk_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp" />
    </LinearLayout>
    <!-- Right piece -->

    <LinearLayout
        android:id="@+id/right_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ResultActivity" 
        android:background="@drawable/red_border">

        <TextView
            android:id="@+id/kenteken_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
           	android:layout_marginBottom="50dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/verzekerd_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/apk_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp" />
    </LinearLayout>
    <!-- Error piece -->

    

</LinearLayout>